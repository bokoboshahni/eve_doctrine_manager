<%
links = {
  dashboard: root_path,
  fittings: fittings_path,
  doctrines: doctrines_path,
  api: api_path,
  users: users_path
}
%>
<nav class="bg-neutral-800" data-controller="reveal">
  <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="border-b border-neutral-700">
      <div class="flex h-16 items-center justify-between px-4 sm:px-0">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img class="h-8 w-8" src="https://tailwindui.com/img/logos/mark.svg?color=cyan&shade=500" alt="EVE Doctrine Manager">
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <% links.each do |key, href| %>
                <% if active_nav?(key) %>
                  <%= link_to t(".links.#{key}"), href, class: 'bg-neutral-900 text-white px-3 py-2 rounded-md text-sm font-medium', aria: { current: :page } %>
                <% else %>
                  <%= link_to t(".links.#{key}"), href, class: 'text-neutral-300 hover:bg-neutral-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium' %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <%= render 'application/user_menu' %>
          </div>
        </div>
        <div class="-mr-2 flex md:hidden">
          <!-- Mobile menu button -->
          <button type="button" class="inline-flex items-center justify-center rounded-md bg-neutral-800 p-2 text-neutral-400 hover:bg-neutral-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-neutral-800" aria-controls="mobile-menu" aria-expanded="false"
            data-action="click->reveal#toggle"
          >
            <span class="sr-only">Open main menu</span>
            <%= heroicon 'bars-3', variant: :outline, options: { class: 'block h-6 w-6' } %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="hidden border-b border-neutral-700 md:hidden" id="mobile-menu" data-reveal-target="item">
    <div class="space-y-1 px-2 py-3 sm:px-3">
      <% links.each do |key, href| %>
        <% if active_nav?(key) %>
          <%= link_to t(".links.#{key}"), href, class: 'bg-neutral-900 text-white block px-3 py-2 rounded-md text-base font-medium', aria: { current: :page } %>
        <% else %>
          <%= link_to t(".links.#{key}"), href, class: 'text-neutral-300 hover:bg-neutral-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium' %>
        <% end %>
      <% end %>
    </div>
    <div class="border-t border-neutral-700 pt-4 pb-3">
      <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
        </div>
        <div class="ml-3">
          <div class="text-base font-medium leading-none text-white">Tom Cook</div>
          <div class="text-sm font-medium leading-none text-neutral-400">tom@example.com</div>
        </div>
      </div>
      <div class="mt-3 space-y-1 px-2">
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-neutral-400 hover:bg-neutral-700 hover:text-white">Sign out</a>
      </div>
    </div>
  </div>
</nav>
